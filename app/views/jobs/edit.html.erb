<div class="container">

  <div class="col-md-12">

    <div class="light-content jumbotron">

      <h1>Edit Job</h1>

      <p>Has your job information changed? Edit it below.</p>

      <%= form_for @job, url: {action: "update"}, html: {class: "job-form"} do |f| %>

          <div class="field form-group">
            <%= f.label :title, "Job Title" %><br />
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :company, "Company" %><br />
            <%= f.text_field :company, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :start_date %><br />
            <%= f.date_field :start_date, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :hourly_wage %><br />
            <%= f.text_field :hourly_wage, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Update Job", :class => "btn btn-main" %>
          </div>
      <% end %>

    </div>

  </div>

</div>