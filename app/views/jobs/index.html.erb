<div class="container">

  <div class="col-md-12">

    <div class="light-content jumbotron">

      <h1>Your Jobs</h1>

      <p>Below are all of your jobs being tracked.</p>

      <%= link_to "View My Dashboard", dashboard_path, :class => "btn btn-lg btn-secondary view-dashboard" %>

      <% flash.each do |key, value| %>
          <div class="alert alert-info"><%= value %></div>
      <% end %>
      <%= yield %>

      <table class="table table-striped table-hover jobs-table">
        <thead>
        <tr>
          <th>#</th>
          <th>Job Title</th>
          <th>Company</th>
          <th>Start Date</th>
          <th>Hourly Wage</th>
          <th>Action</th>
        </tr>
        </thead>

        <tbody>

        <% i = 1; @jobs.each do |job| %>
            <tr>
              <td><%= i %></td>
              <td><%= job.title %></td>
              <td><%= job.company %></td>
              <td><%= job.start_date %></td>
              <td>$<%= job.hourly_wage %></td>
              <td>
                <%= link_to "Edit", edit_job_path(job) %>
                <%= link_to "Delete", job, method: :delete, data: {confirm: 'Are you sure?'} %>
              </td>
            </tr>
            <% i += 1 %>
        <% end %>

        </tbody>
      </table>


    </div>

  </div>

</div>